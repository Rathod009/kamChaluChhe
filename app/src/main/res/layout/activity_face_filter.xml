<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.FaceFilter.FaceFilter">


    <androidx.cardview.widget.CardView
        android:id="@+id/recordercardview"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/recimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/red"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/reccount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:text="00:00"
            android:textSize="22sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            >
        </TextView>

    </androidx.cardview.widget.CardView>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/arfragmentfacefilter"
        android:name="com.example.augmentedreality.Modules.FaceFilter.CustomArFragment"
        />

    <RelativeLayout
        android:id="@+id/relativelayoutfiltercamera"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_above="@+id/relativelayoutfiltermenu"
        android:background="@android:color/transparent"
        >

        <Button
            android:id="@+id/imagebuttoncamera"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/captureimage"

            >

        </Button>

        <Button
            android:id="@+id/filtermenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu1"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imagebuttoncamera"
            android:layout_marginStart="180dp"
            >

        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayoutfiltermenu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:alpha="1.0"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:id="@+id/recyclerViewfilter"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>




    <fragment
        android:id="@+id/fragment"
        android:name="com.example.augmentedreality.menu.MenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>